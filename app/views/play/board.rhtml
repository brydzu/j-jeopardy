							<% else %>
							<span id="DJ<%= i %>-<%= j %>-1"><%= link_to_remote( "<font color=\"white\" size=\"1\">&#9679;</font>", :update => 'DJ' + i.to_s + '-' + j.to_s + '-1', :url =>{ :action => :change_scores, :value => the_q.value, :type => 2, :my_id => 'DJ' +  i.to_s + '-' + j.to_s + '-1'}, :html => {:style => 'text-decoration: none'}) %></span>
							<% end %>				
							<td><% if (c = $double_table[i - 1][j - 1][2]) == 1 %>
								<span id="DJ<%= i %>-<%= j %>-2"><%= link_to_remote( "<font color=\"#33ff33\">&#10003;</font>", :update => 'DJ' + i.to_s + '-' + j.to_s + '-2', :url =>{ :action => :change_scores, :value => the_q.value, :type => 1, :my_id => 'DJ' +  i.to_s + '-' + j.to_s + '-2'}, :html => {:style => 'text-decoration: none'}) %></span>
								<% elsif c == 0 %>
									<span id="DJ<%= i %>-<%= j %>-2"><%= link_to_remote( "<font color=\"red\">&#10007;</font>", :update => 'DJ' + i.to_s + '-' + j.to_s + '-2', :url =>{ :action => :change_scores, :value => the_q.value, :type => 0, :my_id => 'DJ' +  i.to_s + '-' + j.to_s + '-2'}, :html => {:style => 'text-decoration: none'}) %></span>
								<% else %>
								<span id="DJ<%= i %>-<%= j %>-2"><%= link_to_remote( "<font color=\"white\" size=\"1\">&#9679;</font>", :update => 'DJ' + i.to_s + '-' + j.to_s + '-2', :url =>{ :action => :change_scores, :value => the_q.value, :type => 2, :my_id => 'DJ' +  i.to_s + '-' + j.to_s + '-2'}, :html => {:style => 'text-decoration: none'}) %></span>
								<% end %>
					</tr></table>
				</td>
			<% rescue %>
			"></a><font color="white"><b>???</b></font>
